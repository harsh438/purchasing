{
  "name": "processing_frontend",
  "version": "0.1.0",
  "description": "Purchase order processing frontend",
  "entry": "index.js",
  "scripts": {
    "build_react": "browserify --extension .jsx -t babelify -t reactify index.js -o ../api/public/assets/app.js",
    "watch_react": "watchify -v --extension .jsx -t babelify -t reactify index.js -o ../api/public/assets/app.js",
    "build_sass": "node-sass --include-path node_modules/bootstrap/dist/css/ --source-map true app/assets/stylesheets/app.scss ../api/public/assets/app.css",
    "watch_sass": "node-sass -w -r --include-path node_modules/bootstrap/dist/css/ --source-map true app/assets/stylesheets/app.scss ../api/public/assets/app.css",
    "build_images": "mkdir -p ../api/public/assets/images/ && cp -rf app/assets/images/* ../api/public/assets/images/",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/surfdome/purchasing"
  },
  "author": "Made Tech Team",
  "license": "UNLICENSED",
  "private": true,
  "homepage": "https://github.com/surfdome/purchasing",
  "devDependencies": {
    "babel-eslint": "^4.1.3",
    "babelify": "^6.4.0",
    "browserify": "^12.0.0",
    "eslint": "^1.7.3",
    "eslint-plugin-react": "^3.6.3",
    "reactify": "^1.1.1",
    "redux-devtools": "^2.1.5",
    "node-sass": "^3.4.1",
    "watchify": "^3.5.0"
  },
  "dependencies": {
    "bootstrap": "^3.3.5",
    "history": "^1.12.6",
    "react": "^0.14.0",
    "react-dom": "^0.14.0",
    "react-redux": "^4.0.0",
    "react-router": "^1.0.0-rc3",
    "redux": "^3.0.4",
    "redux-thunk": "^1.0.0",
    "whatwg-fetch": "^0.10.0"
  }
}
